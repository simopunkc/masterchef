<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="transactionName"
            type="String" />
        <variable
            name="transactionQuantity"
            type="String" />
        <variable
            name="transactionDate"
            type="String" />
        <variable
            name="transactionJam"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        tools:context=".view.v_sales_transaction_history.floor2.SalesTransactionDetailFragment">

        <ScrollView
            android:id="@+id/scrollview_sales_transaction_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_between_elements"
                    app:cardBackgroundColor="@color/box_color_top1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/menu_name"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_top2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/detail_sales_transaction_name(transactionName)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Cogs and Widgets" />

                        <TextView
                            android:id="@+id/menu_quantity"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_bottom2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/detail_sales_transaction_quantity(transactionQuantity)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/menu_name"
                            tools:text="3" />

                        <TextView
                            android:id="@+id/menu_tgl"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_bottom2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/detail_sales_transaction_date(transactionDate)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/menu_quantity"
                            tools:text="3" />

                        <TextView
                            android:id="@+id/menu_jam"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_bottom2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/detail_sales_transaction_time(transactionJam)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/menu_tgl"
                            tools:text="3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>