<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="restockName"
            type="String" />
        <variable
            name="restockQuantity"
            type="String" />
        <variable
            name="restockDate"
            type="String" />
        <variable
            name="restockJam"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        tools:context=".view.v_restock_history.floor2.RestockDetailFragment">

        <ScrollView
            android:id="@+id/scrollview_restock_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_between_elements"
                    app:cardBackgroundColor="@color/box_color_top1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/stock_name"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_top2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/restock_history_name(restockName)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Cogs and Widgets" />

                        <TextView
                            android:id="@+id/stock_quantity"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_bottom2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/restock_history_quantity(restockQuantity)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/stock_name"
                            tools:text="3" />

                        <TextView
                            android:id="@+id/stock_tgl"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_bottom2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/restock_history_date(restockDate)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/stock_quantity"
                            tools:text="3" />

                        <TextView
                            android:id="@+id/stock_jam"
                            style="@style/Widget.Masterchef.ListItemTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/box_color_bottom2"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/margin_between_elements"
                            android:text="@{@string/restock_history_time(restockJam)}"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/stock_tgl"
                            tools:text="3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>